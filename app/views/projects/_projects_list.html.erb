<% index=0 %>
<ul class="thumbnails">
	<% @projects.each do |project| %>
	<li class="span4 radius alpha">
		<div class="thumbnail">
			<div class="caption">
				<h3 class="projects_list_title">
					<%=link_to project.name,"/projects/#{project.id}",:class=>"link" %></h3>
				<p class="projects_list_brief">
					<%= project.description %>
				</p>
			</div>
		</div>
	</li>
	<% index=index+1 %>
	<% if (index%3)==0 %></ul>
<ul class="thumbnails">
	<% end %>
	<% end %></ul>