<div class="devise-box alpha radius">
<h3>欢迎登录</h3>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :autofocus => true ,:class=>"input-block" ,:placeholder=>"请输入用户名"%>
  <%= f.password_field :password ,:class=>"input-block" ,:placeholder=>"请输入密码"%>
  <%= f.submit "登录" ,:class => "btn btn-primary btn-block btn-large" %>
  <a href="/home/index" class="btn btn-default btn-block btn-large" style="color:#777 !important;">返回</a>
<% end %>
</div>